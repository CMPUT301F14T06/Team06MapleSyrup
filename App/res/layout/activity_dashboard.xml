<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DashboardActivity" >

    <Button
        android:id="@+id/currentQuestionButton"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/question1"
        android:gravity="left|center_vertical"
        android:text="Current Question"
        android:textColor="#66FF00"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/localQuestionButton"
        android:layout_below="@+id/localQuestionButton"
        android:drawableLeft="@drawable/profile"
        android:gravity="left|center_vertical"
        android:text="Profile"
        android:textColor="#66FF00"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/profileButton"
        android:layout_below="@+id/profileButton"
        android:drawableLeft="@drawable/setting"
        android:gravity="left|center_vertical"
        android:text="Setting"
        android:textColor="#66FF00"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/localQuestionButton"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/currentQuestionButton"
        android:layout_below="@+id/currentQuestionButton"
        android:drawableLeft="@drawable/question1"
        android:gravity="left|center_vertical"
        android:text="Local Question"
        android:textColor="#66FF00"
        android:textStyle="bold|italic" />

</RelativeLayout>