<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/linearLayout3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/authorPic"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/desc"
            android:scaleType="fitCenter"
            android:src="@drawable/user_icon48" />

        <TextView
            android:id="@+id/authorNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/author_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/questionTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_title"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/singleQuestionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/single_question"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/save_button"
            style="@style/question_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/save_icon32"
            android:text="@string/save" />

        <RadioButton
            android:id="@+id/fav_button"
            style="@style/question_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/star_fav_empty_icon32"
            android:text="@string/favorite" />

        <RadioButton
            android:id="@+id/add_button"
            style="@style/question_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/hand_pro_icon32"
            android:text="@string/upvote" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout3"
        android:columnCount="2" >

        <TextView
            android:id="@+id/upvoteStateTextView"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="@string/upvote_state"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/answerStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center_vertical"
            android:text="@string/answer_state"
            android:textSize="13sp" />
    </GridLayout>

</RelativeLayout>