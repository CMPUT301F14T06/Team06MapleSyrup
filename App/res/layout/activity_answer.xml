<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.app.AnswerActivity" >
    
        <TextView
            android:id="@+id/AQuestionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#CCCCCC"
            android:text="Question:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentAnswertextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/AQuestionTextView"
            android:layout_alignRight="@+id/AQuestionTextView"
            android:layout_below="@+id/AQuestionTextView"
            android:text="Current Answer"
            android:textColor="#000000"
            android:background="#999999" />

        <EditText
            android:id="@+id/answerEditText1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_above="@+id/cancelAnswerButton"
            android:layout_alignLeft="@+id/currentAnswertextView"
            android:layout_alignRight="@+id/currentAnswertextView"
            android:background="#DDDDDD"
            android:ems="10" />

        <Button
            android:id="@+id/cancelAnswerButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/submitAnswerbutton"
            android:text="Cancel"
            android:textStyle="bold"
        	android:textColor="#66FF00" />

        <Button
            android:id="@+id/submitAnswerbutton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/cancelAnswerButton"
            android:layout_alignBottom="@+id/cancelAnswerButton"
            android:layout_alignRight="@+id/answerEditText1"
            android:text="Submit"
			android:textStyle="bold"
        	android:textColor="#66FF00" />

</RelativeLayout>
