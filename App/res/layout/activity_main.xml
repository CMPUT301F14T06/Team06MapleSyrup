
<!-- The fragment part is from this website: http://www.programering.com/a/MjNzIDMwATI.html 2014-Oct-20 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragement_main"
        android:name="ca.ualberta.app.activity.FragmentMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragement_fav"
        android:name="ca.ualberta.app.activity.FragmentFavorite"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragement_search"
        android:name="ca.ualberta.app.activity.FragmentSearch"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragement_profile"
        android:name="ca.ualberta.app.activity.FragmentProfile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" />

    <!-- menu -->

    <RadioGroup
        android:id="@+id/main_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/main_menu_button"
            style="@style/main_menu_bottom"
            android:layout_height="match_parent"
            android:checked="true"
            android:drawableTop="@drawable/home_icon"
            android:text="@string/menu_home" />

        <RadioButton
            android:id="@+id/fav_menu_button"
            style="@style/main_menu_bottom"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/fav_icon"
            android:text="@string/menu_fav" />

        <RadioButton
            android:id="@+id/add_menu_button"
            style="@style/main_menu_bottom"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/add_icon"
            android:text="@string/menu_add" />

        <RadioButton
            android:id="@+id/search_menu_button"
            style="@style/main_menu_bottom"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/search_icon"
            android:text="@string/menu_search" />

        <RadioButton
            android:id="@+id/profile_menu_button"
            style="@style/main_menu_bottom"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/user_icon"
            android:text="@string/menu_profile" />
    </RadioGroup>

</LinearLayout>